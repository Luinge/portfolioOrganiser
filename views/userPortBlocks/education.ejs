<div id="education" style="margin-top:20px" class="card">

    <h3 style="margin-left:5px; margin-top:5px; color:#c95024">Education

            <%if(currentUser){%>

                <%if(currentUser.username==user.username){%>
        
                    <span style="float:right; margin-right:10px; cursor:pointer;" onclick="itemPopup('educationInput')">+</span>
        
                <%}%>

            <%}%>

        <hr>
    </h3>

    <%if(user.education.length){%>

        <%user.education.forEach(function(education){%>

        <h6 style="margin-left:10px; width:400px"><img src='/icons/education.png' style="width:20px;">
            
            <span style="cursor:pointer; margin-left:10px;"><%=education.title%></span><br>
            
            <p style="margin-left:34px;" class="text-muted">
        
                <font size=2>

                        <%if(education.degree.length!=0 && education.period.length!=0){%>
                            
                            <%=education.degree%> | 
                        
                        <%}else if(education.degree.length!=0 && education.period.length==0){%>
                        
                            <%=education.degree%>
                        
                            <%if(education.degree.length!=0 && education.location.length!=0){%>
                                |
                            <%}%>
                        
                        <%}%>
                        
                        <%if(education.degree.length!=0 && education.location.length!=0){%>
                        
                            <%=education.period%> |
                        
                        <%}else if(education.degree.length!=0 && education.location.length==0){%>
                        
                            <%=education.period%>
                        
                        <%}%>
                        
                        <%if(education.location.length!=0){%>
                        
                            <%=education.location%>
                        
                        <%}%>
                    
                    <hr style="margin-left:30px;">
                </font>
                
            </p>
        
        </h6>

        <%})%>

    <%}else{%>
    
        <h5 style="text-align:center">No Education Added</h5>

    <%}%>

</div>