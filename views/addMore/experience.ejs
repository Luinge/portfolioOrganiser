<link href="/addMore/experience/style.css" rel="stylesheet">

<div id="experienceInput">

    <div>
        
        <br><br><br>
        
        <!-- <span onclick="div_hide()" style="float:right" class="x">X</span> -->

        <form action="/experience" method="POST">

            <input hidden name="url" value="<%=url%>">

            <input hidden name="username" value="<%=user.username%>">

            <div  style="margin-top:20px; width:350px; text-align: center" class="container ">

                <div style="margin-bottom:20px" class="card text-center">
                        
                    <div class="card-header">
                        Add Experience
                    </div>
                    
                    <div class="card-body">

                        <input class="form-control" name="experience[title]" placeholder="Experience Title" required><br>
                        
                        <!-- <input type="checkbox" name="skills[isCustomInfo]" value="true" /><label style="margin-left:5px; margin-bottom:10px;">Make Custom Info</label> -->

                        <span id="nonCustomInfo">

                            <input type="radio" style="margin-right:5px" name="experience[isWorked]" value="true" checked><label>Worked</label>
                            <input type="radio" style="margin-right:5px; margin-left:60px" name="experience[isWorked]" value="false"><label>Working</label><br>                       

                            <input class="form-control" name="experience[period]" placeholder="Years Active" required><br>                            

                            <input class="form-control" name="experience[organisation]" placeholder="Organisation or Company" required><br>                            


                        </span>

                    </div>
                    
                    <div class="card-footer text-muted">
                        <button class="btn btn-success" type="submit">POST</button>
                    </div>

                </div>

            </div>

        </form>
        
    </div>

    

</div>

<script src="/addMore/itemPopup.js"></script>